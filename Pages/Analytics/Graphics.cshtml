@page
@model ProyectoReportes.Pages.Analytics.GraphicsModel
@{
    ViewData["Title"] = "GrÃ¡ficos de Reportes";
    Layout = "_Layout";
}

<div class="p-6 bg-white dark:bg-gray-900 shadow-lg rounded-xl h-screen">
    <div class="flex justify-between items-center mb-4">
        <h2 class="text-2xl font-bold text-purple-800 dark:text-purple-300">ðŸ“Š GrÃ¡ficos de Reportes</h2>
        <button id="toggleChart" class="px-4 py-2 bg-purple-600 hover:bg-purple-700 text-white rounded-lg transition">
            Cambiar GrÃ¡fico
        </button>
    </div>
    

    <div class="relative w-full h-5/6">
        <canvas id="reportChart" class="w-full h-full"></canvas>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const ctx = document.getElementById('reportChart').getContext('2d');
            const reportData = @Html.Raw(Json.Serialize(Model.ReportCounts));

            const labels = Object.keys(reportData);
            const values = Object.values(reportData);

            let currentType = 'bar';

            const chartConfig = {
                type: currentType,
                data: {
                    labels: labels,
                    datasets: [{
                        label: 'Cantidad de Reportes',
                        data: values,
                        backgroundColor: [
                            'rgba(102, 51, 153, 0.5)',
                            'rgba(255, 99, 132, 0.5)',
                            'rgba(54, 162, 235, 0.5)',
                            'rgba(255, 206, 86, 0.5)',
                            'rgba(75, 192, 192, 0.5)'
                        ],
                        borderColor: [
                            'rgba(102, 51, 153, 1)',
                            'rgba(255, 99, 132, 1)',
                            'rgba(54, 162, 235, 1)',
                            'rgba(255, 206, 86, 1)',
                            'rgba(75, 192, 192, 1)'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false, 
                    scales: {
                        y: { beginAtZero: true }
                    }
                }
            };

            let reportChart = new Chart(ctx, chartConfig);

            document.getElementById('toggleChart').addEventListener('click', function () {
                currentType = currentType === 'bar' ? 'pie' : 'bar';
                reportChart.destroy();
                chartConfig.type = currentType;
                reportChart = new Chart(ctx, chartConfig);
            });
        });
    </script>
}
